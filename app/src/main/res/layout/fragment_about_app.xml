<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AboutAppFragment">


        <ImageView
            android:id="@+id/imgprofileImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:background="#f5f5f5"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/book_app"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="This is the book App. This app display the list of popular books and on clicking on the any book will open a next page where, you can see the discription of that book. You can also add the book to favourites and remove from favourite. This app also has a about screen fragment which  tells you about the app... Enjoy the world of books in this app."
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="italic"/>

</LinearLayout>